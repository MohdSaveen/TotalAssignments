<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#551947"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/ibback"
                android:layout_width="50sp"
                android:layout_height="60sp"
                android:backgroundTint="#551947"
                android:src="@drawable/ic_vector"/>
            <TextView
                android:id="@+id/fly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="20sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:text="Fly to Seoul"
                android:layout_marginStart="60sp"
                android:layout_toEndOf="@+id/ibback"/>


            <ImageButton
                android:id="@+id/vec1"
                android:layout_width="40sp"
                android:layout_height="60sp"
                android:backgroundTint="#551947"
               android:layout_alignTop="@+id/view1"
                android:layout_below="@+id/ibback"
                android:layout_marginTop="-40sp"
                android:layout_marginLeft="40sp"
                android:src="@drawable/ic_vector__5_" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#551947"
                android:layout_alignStart="@+id/view1"
                android:layout_marginBottom="9sp"
                android:layout_marginLeft="8sp"
                android:layout_above="@+id/vec1"
                android:src="@drawable/ic_vector__1_"/>

            <View
                android:id="@+id/view1"
                android:layout_width="350sp"
                android:layout_height="1sp"
                android:layout_marginLeft="30sp"
                android:background="@color/white"
                android:layout_below="@+id/fly"
                android:layout_marginTop="80sp"/>
            <TextView
                android:id="@+id/adult"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="50sp"
                android:text="1 Adult, Economy"
                android:textColor="@color/white"
                android:layout_below="@+id/fly" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#551947"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="40sp"
                android:layout_below="@+id/view1"
                android:src="@drawable/ic_vector__2_"/>
            <View
                android:id="@+id/view2"
                android:layout_width="350sp"
                android:layout_height="1sp"
                android:layout_marginLeft="30sp"
                android:background="@color/white"
                android:layout_below="@+id/view1"
                android:layout_marginTop="90sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="60sp"
                android:text="Seoul, Korea"
                android:textColor="@color/white"
                android:layout_below="@+id/view1" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#551947"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="40sp"
                android:layout_below="@+id/view2"
                android:src="@drawable/ic_vector__3_"/>

            <View
                android:id="@+id/view3"
                android:layout_width="350sp"
                android:layout_height="1sp"
                android:layout_marginLeft="30sp"
                android:background="@color/white"
                android:layout_below="@+id/view2"
                android:layout_marginTop="90sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="60sp"
                android:text="Choose Destination"
                android:textColor="@color/white"
                android:layout_below="@+id/view2" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#551947"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="40sp"
                android:layout_below="@+id/view3"
                android:src="@drawable/ic_vector__4_"/>
            <View
                android:id="@+id/view4"
                android:layout_width="350sp"
                android:layout_height="1sp"
                android:layout_marginLeft="30sp"
                android:background="@color/white"
                android:layout_below="@+id/view3"
                android:layout_marginTop="90sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="100sp"
                android:layout_marginTop="60sp"
                android:text=" Select Dates"
                android:textColor="@color/white"
                android:layout_below="@+id/view3" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:layout_weight="2">

            <TextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C2C2C2"
                android:text="Explore Flights by destination"
                android:textStyle="bold"
                android:layout_marginLeft="20sp"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/khumbu"
                android:layout_width="100sp"
                android:layout_height="90sp"
                android:src="@drawable/khumbu"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/destination"/>
            <TextView
                android:id="@+id/khumbutext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Khumbu Valley, Nepal"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="20sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_toRightOf="@+id/khumbu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NonStop - 5h 16m+"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#C2C2C2"
                android:layout_marginTop="75sp"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@+id/khumbu"/>


            <View
                android:id="@+id/lines"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_below="@+id/khumbu"
                android:layout_marginTop="10sp"
                android:background="#C2C2C2"/>
            <ImageView
                android:id="@+id/maldives"
                android:layout_width="100sp"
                android:layout_height="90sp"
                android:src="@drawable/maldives"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/lines"/>


            <TextView
                android:id="@+id/maldivestxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Maldives,South Asia"
                android:layout_below="@+id/lines"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="25sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_toRightOf="@+id/maldives"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NonStop - 8h 24m+"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#C2C2C2"
                android:layout_below="@+id/lines"
                android:layout_marginTop="47sp"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@+id/maldives"/>

</RelativeLayout>
</LinearLayout>